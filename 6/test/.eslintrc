{
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "globals": {
      "expect": true
    },
    "ignorePatterns": ["public/"],
    "plugins": ["import", "react"],
    "extends": [
      "eslint:recommended",
      "google",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:react/recommended"
    ],
    "rules": {
      "indent": [2, 4, {"SwitchCase": 1}],
      "max-len": ["error", 120],
      "require-jsdoc": "off",
      "comma-dangle": "off",
      "no-console": 2,
      "react/react-in-jsx-scope": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }